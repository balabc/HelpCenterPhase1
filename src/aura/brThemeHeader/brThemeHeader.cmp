<aura:component implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="search" type="String"/>
    
    <aura:registerEvent name="brToggleSearchModalEventHandler" type="c:brToggleSearchModalEvent"/>
    
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/> 
    <aura:handler event="c:brChangeHeaderSearchBarEvent" action="{!c.changeSearch}"/> 

    <header class="header">
        <div class="header__container container clr">
            <div class="header__left">
                <a href="/" class="header__logo-icon header__logo"></a>
                <div class="header__wrap-nav clr">
                    <ul class="header__nav">
                        <li class="header__nav-item">
                            <div class="header__nav-item-cont">
                                <a href="#" class="header__link header__nav-link">Help center</a>
                                <div class="header__nav-arrow nav-arrow nav-arrow--up">
                                    <div class="nav-arrow__handler">
                                        <span class="nav-arrow__icon"></span>
                                    </div>
                                </div>

                                <div class="header__wrap-dropdown-menu">
                                    <div class="container">
                                        <div class="header__dropdown-menu clr">
                                            <div class="header__dropdown-menu-section header__dropdown-menu-section--main">
                                                <ul class="header__dropdown-menu-submenu">
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Home</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">News and Updates</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Ideas</a>
                                                    </li>
                                                </ul>
                                            </div>

                                            <div class="header__dropdown-menu-section header__dropdown-menu-section--knowledge">
                                                <p class="header__dropdown-menu-title">
                                                    <a href="#" class="header__dropdown-menu-title-link">Knowledge base</a>
                                                </p>
                                                <ul class="header__dropdown-menu-submenu">
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Articles</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Videos</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Learning Guides</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Developer Docs <span class="icon-svg-docs-sm"></span></a>
                                                    </li>
                                                </ul>
                                            </div>

                                            <div class="header__dropdown-menu-section header__dropdown-menu-section--community">
                                                <p class="header__dropdown-menu-title">Community</p>
                                                <ul class="header__dropdown-menu-submenu">
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Groups</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">QA</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Events</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">AMAs</a>
                                                    </li>
                                                    <li class="header__dropdown-menu-item">
                                                        <a href="#" class="header__dropdown-menu-link">Town Halls</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div><!-- / end of .container -->
                                </div><!-- / end of .header__wrap-dropdown-menu -->

                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="header__right">
                <a href="javascript:void(0);" class="header__link header__contact__show-trigger" onclick="{!c.toggleHeaderContact}">Contact</a>

                <c:brNotifications /> 
                <div class="header__userpic">
                    <img src="http://via.placeholder.com/30x30" alt="" />
                </div> 
                <div class="header__dropdown">
                    <div class="header__dropdown-trigger nav-arrow">
                        <div class="nav-arrow__handler">
                            <span class="nav-arrow__icon"></span>
                        </div>
                    </div>
                    <div class="header__dropdown-wrap-list">
                        <ul class="header__dropdown-list">
                            <li class="header__dropdown-list-item">
                                <a href="#" class="header__dropdown-list-link">Item</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="header__center">
                <div class="header__searchbox">
                    <input type="text" class="header__searchbox-input-text" value="{!v.search}" placeholder="Search" onclick="{!c.toggleSearchModal}"/>
                    <input type="submit" class="header__searchbox-input-button" placeholder="" onclick="{!c.toggleSearchModal}"/>
                </div>
            </div>
        </div><!-- end of .container -->

        <c:brHeaderContact aura:id="childHeaderContact"/>

    </header>
    <div class="header-pad"></div>
</aura:component>
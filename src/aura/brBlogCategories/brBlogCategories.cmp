<aura:component controller="brBlogCategoriesCtrl">

    <aura:attribute name="categories" type="Object[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="prefixSite" type="String" />
    <aura:attribute name="listPageName" type="String" default="blog" access="global"/>
    
    <div class="categories">
        <h3 class="slds-hide" aura:id="categories">{!$Label.c.hBlogCategories}</h3>
        <ul>
            <aura:iteration items="{!v.categories}" var="category">
                <li>
                    <a href="{!$SfdcSite.pathPrefix + '/s/'+ v.listPageName + '#category=' + category.urlName}">
                        {!category.categoryName}
                    </a> 
                    ({!category.categoryCount})
                </li>
            </aura:iteration>
        </ul>
    </div>
</aura:component>
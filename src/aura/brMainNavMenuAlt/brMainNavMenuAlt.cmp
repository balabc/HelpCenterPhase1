<aura:component extends="forceCommunity:navigationMenuBase" implements="forceCommunity:availableForAllPageTypes" description="brMainNavMenuAlt">
    <div class="header__wrap-nav clr">
        <ul onclick="{!c.onClick}" class="header__nav">
            <li class="header__nav-item">
                <div class="header__nav-item-cont">
                    <a href="#" class="header__link header__nav-link">Help center</a>
                </div>
            </li>

            <aura:iteration items="{!v.menuItems}" var="i" indexVar="index">
                <aura:if isTrue="{!i.subMenu}">
                    <li class="header__nav-item">
                        <div class="header__nav-item-cont">
                            <div class="header__nav-trigger">
                                <span class="header__nav-label">{!i.label}</span>
                                <div class="header__nav-arrow nav-arrow">
                                    <div class="nav-arrow__handler">
                                        <span class="nav-arrow__icon"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="header__wrap-dropdown-menu">
                                <div class="container">
                                    <div class="header__dropdown-menu clr">
                                        <ul onclick="{!c.onClick}" class="header__dropdown-menu-submenu">
                                            <aura:iteration items="{!i.subMenu}" var="subItem">
                                                <li class="header__dropdown-menu-item">
                                                    <a href="" data-menu-item-id="{!subItem.id}" class="header__dropdown-menu-link">{!subItem.label}</a>
                                                </li>
                                            </aura:iteration>
                                        </ul>
                                    </div>
                                </div><!-- / end of .container -->
                            </div><!-- / end of .header__wrap-dropdown-menu -->

                        </div>
                    </li>
                </aura:if>
            </aura:iteration>

            <aura:iteration items="{!v.menuItems}" var="item" >
                <aura:if isTrue="{!and(not(item.subMenu), not(equals(item.id, 0)))}">
                    <li class="header__nav-item">
                        <div class="header__nav-item-cont">
                            <a href="" data-menu-item-id="{!item.id}" class="header__link header__nav-link">{!item.label}</a>
                        </div>
                    </li>
                </aura:if>
            </aura:iteration>
        </ul>
    </div>
</aura:component>

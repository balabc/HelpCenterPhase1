<aura:component implements="forceCommunity:availableForAllPageTypes,force:hasRecordId" description="brArticleContent" access="global" controller="brArticleContentController">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="articleType" type="String" />
    <aura:attribute name="dataCategory" type="String" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="article clr">
        <aura:if isTrue="{!$Browser.formFactor != 'PHONE'}">
            <div class="article__nav">
                <nav class="doc-nav">
                    <c:brCategoriesCMP aura:id="brCategoriesCMP"/>
                </nav><!-- / end of .doc-nav -->
            </div><!-- / end of .article__nav -->
        </aura:if>
        <div class="article__content">
            <c:brArticleBody articleType="{!v.articleType}" recordId="{!v.recordId}"/>
        </div><!-- / end of .article__content -->
    </div><!-- / end of .article -->
</aura:component>
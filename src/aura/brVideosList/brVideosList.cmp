<aura:component description="brVideosList" controller="brVideosListCtrl" implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="videoArticles" type="University__kav[]" />
    <aura:attribute name="videoArticlesForCurrentPage" type="University__kav[]" />
    <aura:attribute name="currentPageNumber" type="Integer" />
    <aura:attribute name="pageNumbers" type="Integer[]" />
    <aura:attribute name="videosPerPage" type="Integer" />
    <aura:attribute name="isPrevious" type="Boolean" />
    <aura:attribute name="isNext" type="Boolean" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler name="setVideosPage" event="c:brSetVideosPageEvent" action="{!c.setVideosPage}"/>

    <div class="panel-title">
                <div class="container">
                    <h1 class="h1 panel-title__text">{!$Label.c.hVideos}</h1>
                </div>
            </div>
    <div class="container">
        <c:brBreadcrumbs/>

        <div class="p-top-12 p-bottom-70">
            <div class="row row--pad">
                <aura:iteration items="{!v.videoArticlesForCurrentPage}" var="item">
                    <div class="column-lg-3 column-md-12 column--pad column--grid">
                    <div class="panel panel-preview">
                        <div class="panel-preview__head">
                            <div class="panel-preview__wrap-media">
                                <div class="panel-preview__wrap-video">
                                    <iframe width="258" height="140" src="https://www.youtube.com/embed/O_6-2Ryh5WY" frameborder="0" ></iframe><!--allowfullscreen-->
                                </div>
                            </div>
                        </div>
                        <div class="panel-preview__body">
                            <div class="panel-preview__wrap-title">
                                <h4 class="h4 panel-preview__title" title="Inventory Management">{!item.Short_Title__c}</h4>
                            </div>
                            <span class="panel-preview__meta truncated">{!item.Video_Duration__c}</span>
                            <div class="panel-preview__wrap-text">
                                <p>{!item.Short_Description__c}</p>
                            </div>
                            <a href="#" class="panel-preview__link truncated">{!$Label.c.lnkWatchVideo}</a>
                        </div>
                    </div>
                </div><!-- / end of column -->
                </aura:iteration>
            </div><!-- / end of .row -->

            <div class="wrap-pagination">
                <ul class="pagination">
                    <li class="pagination__item">
                        <a class="pagination__link" onclick="{!c.showPrevVideos}">
                            {!v.isPrevious?'Prev':''}
                        </a>
                    </li>
                        <aura:iteration items="{!v.pageNumbers}" var="pageNumber">
                            <c:brVideosPagination pageNumber="{!pageNumber}" currentPageNumber="{!v.currentPageNumber}" />
                        </aura:iteration>
                    <li class="pagination__item">
                        <a class="pagination__link" onclick="{!c.showNextVideos}">
                            {!v.isNext?'Next':''}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div><!-- / end of .container -->
</aura:component>
